<div class="page-header">

    <h1><%= user.local.name %></h1>

    <a href="/logout" class="btn btn-default btn-sm">Logout</a>

</div>
<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <div class="well">

            <p>
                <strong>Name</strong>: <%= user.local.name %><br>
                <strong>id</strong>: <%= user._id %><br>
                <strong>email</strong>: <%= user.local.email %><br>
                <strong>password</strong>: <%= user.local.password %>
            </p>

        </div>
    </div>
</div>

<hr>

<div class="panel-body">
  <% user.posts.forEach(function(post){ %>
      <%= post.content %><br />
      Post Id: <%= post._id %><br />
      User Id: <%= post._by._id %><br />
      <%= post.createdAt %><br />
      <a href="/posts/<%= post._id %>">View</a>
      <hr>
      <span class="help-block">Comment on this post!</span>
      <% post.comments.forEach(function(comment){ %>
        <%= comment.content %><br />
        Comment Id: <%= comment._id %><hr />
      <% }) %>
      <form class="" action="/posts/<%= post._id %>/comments" method="post">
        <textarea id="post" class="form-control" rows="2"></textarea><br>
        <input type="submit" name="submit" value="Submit">
      </form>
      <hr />

  <% }) %>
</div>
